import React, { useState } from 'react';
import Sidebar from './components/sidebar/Sidebar';
import './App.css'; // 如果你需要全局样式
import 'react-tabs/style/react-tabs.css'; 

function App() {
  const [showSidebar, setShowSidebar] = useState(true);

  const toggleSidebar = () => {
    setShowSidebar(!showSidebar);
  };

  return (
    <div className="min-h-screen bg-gray-900 text-white">
      {/* 侧边栏组件 */}
      <Sidebar 
        showSidebar={showSidebar}
        toggleSidebar={toggleSidebar} 
      />
      
      {/* 主内容区域 */}
      <main className={`ml-0 md:ml-64 transition-all duration-300 ${showSidebar ? 'md:ml-64' : 'md:ml-0'}`}>
        <div className="p-6">
          <h1 className="text-2xl font-bold mb-4">ChatGPT Clone</h1>
          {/* 这里将是聊天界面的主要内容 */}
          <div className="bg-gray-800 rounded-lg p-6 h-[calc(100vh-120px)]">
            <p className="text-gray-400">Select a chat or create a new one to start chatting</p>
          </div>
        </div>
      </main>
    </div>
  );
}

export default App;